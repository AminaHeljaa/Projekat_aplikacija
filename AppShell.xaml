<Shell
    x:Class="Projekatv2.AppShell"
    xmlns:local="clr-namespace:Projekatv2"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Projekatv2"
    xmlns:views="clr-namespace:Projekatv2.Views"
    Shell.TabBarUnselectedColor="Black" 
    
    Shell.TabBarBackgroundColor="#FFF6E5"
    Shell.TabBarTitleColor="#F4B400"
   
    Shell.ForegroundColor="#1F3A5F"
     Shell.TabBarForegroundColor="#1F3A5F">
   

    <TabBar>
        <!-- Home -->
        <Tab x:Name="Home" Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>


        <!-- Cart sa badge -->
        <Tab Title="Cart" Icon="shoppingcart.png">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" />
        </Tab>

        <!-- Favourites -->
        <Tab Title="Favourites" Icon="heart.png">
            <ShellContent ContentTemplate="{DataTemplate views:FavouritesPage}" />
        </Tab>

        <!-- Profile -->
        <Tab Title="Profile" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
