<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekatv2.Views.HelpPage"
             Title="Pomoc"
             BackgroundImageSource="pocetna.png">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Frame CornerRadius="24" Padding="20" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="16">

                    <Label Text="Kako vam mozemo pomoci?"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1F3C88"
                           HorizontalOptions="Center"/>

                    <Label Text="Najcesca pitanja"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1F3C88"/>

                    <Label Text="• Kako promijeniti ime na profilu?"
                           FontSize="14"/>

                    <Label Text="• Kako promijeniti lozinku?"
                           FontSize="14"/>

                    <Label Text="• Kako napraviti narudzbu?"
                           FontSize="14"/>

                    <Label Text="• Kako kontaktirati podrsku?"
                           FontSize="14"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0"/>

                    <Label Text="Kontakt podrska"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#1F3C88"/>

                    <Label Text="Email: podrska@slatkizalogaj.ba"/>
                    <Label Text="Telefon: +387 61 123 456"/>

                    <Button Text="Posalji email podrsci"
                            Clicked="SupportEmail_Clicked"
                            BackgroundColor="#FFC107"
                            TextColor="Black"
                            CornerRadius="20"
                            HeightRequest="50"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>